<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_indent_id"
        android:layout_marginLeft="30dp"
        android:text="订单号"
        android:textSize="20sp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_indent_id_num"
        android:textSize="20dp"
        android:layout_toRightOf="@id/tv_indent_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_indent_user_id"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_indent_id"
        android:textSize="20dp"
        android:text="下单账号"
        android:layout_width="100dp"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_indent_user_id_num"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:layout_toRightOf="@id/tv_indent_user_id"
        android:layout_below="@id/tv_indent_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_indent_res_id"
        android:layout_marginLeft="30dp"
        android:text="商家名"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_indent_user_id"
        android:layout_width="80dp"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_indent_res_id_name"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_indent_user_id_num"
        android:layout_toRightOf="@id/tv_indent_res_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_indent_res_id_phone"
        android:layout_marginLeft="10dp"
        android:text="商家电话"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_indent_res_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_indent_res_id_phone_num"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_indent_res_id_name"
        android:layout_toRightOf="@id/tv_indent_res_id_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_indent_user_address"
        android:layout_marginLeft="10dp"
        android:text="送餐地址"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_indent_res_id_phone"
        android:layout_width="100dp"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_indent_user_address_num"
        android:textSize="20dp"
        android:layout_toRightOf="@id/tv_indent_user_address"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_indent_res_id_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_indent_user_phone"
        android:layout_marginLeft="10dp"
        android:text="联系电话"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_indent_user_address"
        android:layout_width="100dp"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_indent_user_phone_num"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_indent_user_address_num"
        android:layout_toRightOf="@id/tv_indent_user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_indent_type"
        android:layout_marginLeft="10dp"
        android:text="订单状态"
        android:textSize="20dp"
        android:layout_below="@id/tv_indent_user_phone"
        android:layout_marginTop="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_indent_type_num"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_indent_user_phone"
        android:layout_toRightOf="@id/tv_indent_type"
        android:textSize="20dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/tv_indent_total"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_indent_user_phone"
        android:layout_toRightOf="@id/tv_indent_type_num"
        android:textSize="20dp"
        android:text="总额  ￥"
        android:layout_width="70dp"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/tv_indent_total_num"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_indent_user_phone_num"
        android:layout_toRightOf="@id/tv_indent_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

</RelativeLayout>
