<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="商家注册"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:text="账号："
            android:textSize="20sp"
            android:layout_marginTop="15sp"
            android:layout_width="80sp"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:id="@+id/et_resID"
            android:background="@android:drawable/edit_text"
            android:hint="请输入10位账号"
            android:textSize="20sp"
            android:inputType="text"
            android:maxLength="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:text="密码："
            android:textSize="20sp"
            android:layout_marginTop="15sp"
            android:layout_width="80sp"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:id="@+id/et_resPassword"
            android:background="@android:drawable/edit_text"
            android:inputType="textPassword"
            android:maxLength="16"
            android:hint="请输入密码"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:text="确认密码："
            android:textSize="20sp"
            android:layout_marginTop="15sp"
            android:layout_width="120sp"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:id="@+id/et_resPassword_again"
            android:background="@android:drawable/edit_text"
            android:inputType="textPassword"
            android:maxLength="16"
            android:hint="请再次输入密码"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:text="地址："
            android:textSize="20sp"
            android:layout_marginTop="15sp"
            android:layout_width="80sp"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:id="@+id/et_resAddress"
            android:background="@android:drawable/edit_text"
            android:hint="请输入地址"
            android:textSize="20sp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:text="电话："
            android:textSize="20sp"
            android:layout_marginTop="15sp"
            android:layout_width="80sp"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:id="@+id/et_resPhone"
            android:background="@android:drawable/edit_text"
            android:hint="请输入电话"
            android:textSize="20sp"
            android:inputType="number"
            android:maxLength="11"
            android:digits="0123456789"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:text="店名："
            android:textSize="20sp"
            android:layout_marginTop="15sp"
            android:layout_width="80sp"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:id="@+id/et_resName"
            android:background="@android:drawable/edit_text"
            android:hint="请输入店名"
            android:textSize="20sp"
            android:inputType="text"
            android:maxLength="12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:text="选择主营类型"
            android:textSize="20sp"
            android:layout_marginTop="15sp"
            android:layout_width="140sp"
            android:layout_height="wrap_content"></TextView>

        <Spinner
            android:id="@+id/res_type_spinner"
            android:entries="@array/res_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_res_register"
            android:text="注册"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></Button>

        <Button
            android:id="@+id/btn_res_register_cancel"
            android:text="取消"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></Button>


    </LinearLayout>







</LinearLayout>